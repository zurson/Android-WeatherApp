<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:background="@drawable/shape_info_frame"
            android:orientation="vertical">

            <TextView
                android:id="@+id/basic_weather_city_name_text_view"
                style="@style/basic_info_style"
                android:layout_weight="1"
                android:text="New York" />

            <TextView
                android:id="@+id/basic_weather_temperature_text_view"
                style="@style/basic_info_style"
                android:layout_weight="2"
                android:text="15°" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/basic_weather_icon_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/icon_10d" />

                <TextView
                    android:id="@+id/basic_weather_description_text_view"
                    style="@style/basic_info_style"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:layout_gravity="center"
                    android:breakStrategy="simple"
                    android:text="Mostly Sunny" />


                <ImageView
                    android:id="@+id/basic_weather_icon_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/icon_10d" />



            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:background="@drawable/shape_info_frame"
            android:orientation="vertical">

            <TextView
                android:id="@+id/basic_weather_time_text_view"
                style="@style/basic_info_style"
                android:layout_weight="1"
                android:text="14:28" />

            <TextView
                android:id="@+id/basic_weather_pressure_text_view"
                style="@style/basic_info_style"
                android:layout_weight="2"
                android:text="1014 hPa" />

            <TextView
                android:id="@+id/basic_weather_coordinates_text_view"
                style="@style/basic_info_style"
                android:layout_weight="1"
                android:maxLines="2"
                android:text="H: 50.25°\nL: 90.81°"
                android:textAlignment="center"
                android:textColor="@color/white" />

        </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>